        </preConditions>
        <addForeignKeyConstraint baseTableName="kenyaemr_hiv_testing_patient_contact" baseColumnNames="obs_group_id"
                                 constraintName="kemr_list_group_id" referencedTableName="obs"
                                 referencedColumnNames="obs_id"/>
    </changeSet>

